<% page_title("Contact Us") %>

<h1>Contact Us</h1>

<div class="form-wrapper">
  <%= form_tag contact_path, width: 600 do |f| %>
    <%= f.misc_field_tag :full_name, current_user.full_name, label: "Your Name" %>
    <%= f.misc_field_tag :email_address, current_user.email_address, label: "Your Email" %>
    <%= f.text_area_tag :message, nil, width: 400, height: 200, validation: {allow_blank: false} %>
    <%= f.submit_button "Submit" %>
  <% end %>
</div>
