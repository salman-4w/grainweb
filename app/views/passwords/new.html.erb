<% page_title "Forgot Password" %>

<div class="center">
  <%= form_tag password_path,
      handle_enter_key: true, label_width: 75, label_align: "top",
      width: 370, controls_width: 130 do |f| -%>
    <%= f.text_field_tag "login", nil, label: "Your Username", validation: {allow_blank: false} %>
    <%= f.submit_button "Submit" %>
  <% end -%>
</div>
